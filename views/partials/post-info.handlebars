<article class="post">
  <div class="title">
    <a href="{{image_input}}" target="_blank">{{title}}</a>
    <span>({{image_input}})</span>
    <div id="display_image">
        <img src= {{image_input}} alt="">
    </div>

  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}} </a>
     
  </div>
</article>
